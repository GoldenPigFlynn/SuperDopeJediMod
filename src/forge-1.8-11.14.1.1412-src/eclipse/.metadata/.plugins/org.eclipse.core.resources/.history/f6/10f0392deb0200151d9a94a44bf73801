package SuperDopeJediMod;

//import cpw.mods.fml.common.registry.LanguageRegistry; //Used in 1.6.4 and before
import net.minecraftforge.fml.common.SidedProxy;
import net.minecraftforge.fml.common.registry.GameRegistry;
import net.minecraftforge.fml.common.event.FMLPostInitializationEvent;
import net.minecraftforge.fml.common.event.FMLInitializationEvent;
import net.minecraftforge.fml.common.event.FMLPreInitializationEvent;

import net.minecraft.item.Item;

import net.minecraftforge.fml.common.Mod;
import net.minecraftforge.fml.common.Mod.EventHandler;
import net.minecraftforge.fml.common.Mod.Instance;
//import cpw.mods.fml.common.Mod.Init;       //Used in 1.5.2 and before
//import cpw.mods.fml.common.Mod.PostInit;   //Used in 1.5.2 and before
//import cpw.mods.fml.common.Mod.PreInit;    //Used in 1.5.2 and before
//Added for 1.6.x and 1.7.x
//import cpw.mods.fml.common.network.NetworkMod;        //Used in 1.6.4 and before



@Mod(modid=SuperDopeJediMod.MODID, name=SuperDopeJediMod.MODNAME, version=SuperDopeJediMod.MODVER) //Tell forge "Oh hey, there's a new mod here to load."
public class SuperDopeJediMod //Start the class Declaration
{
    //Set the ID of the mod (Should be lower case).
    public static final String MODID = "superDopeJediMod";
    //Set the "Name" of the mod.
    public static final String MODNAME = "SuperDopeJediMod";
    //Set the version of the mod.
    public static final String MODVER = "0.0.0";

    public static Item genericItem;
    public static Item genericIngot;
    
    @Instance(value = SuperDopeJediMod.MODID) //Tell Forge what instance to use.
    public static SuperDopeJediMod instance;
        
    @SidedProxy(clientSide="tutorial.generic.client.ClientProxy",
            serverSide="tutorial.generic.CommonProxy")
    
    @EventHandler
    public void preInit(FMLPreInitializationEvent event)
    {
    	genericItem = new GenericItem();
        // The second parameter is an unique registry identifier (not the displayed name)
        // Please don't use item1.getUnlocalizedName(), or you will make Lex sad
        GameRegistry.registerItem(genericItem, "item1");
        
        //genericIngot = new GenericItem().setMaxStackSize(16).setCreativeTab(CreativeTabs.tabMisc).setUnlocalizedName("genericIngot");
        //genericIngot = new GenericItem().setMaxStackSize(16).setUnlocalizedName("genericIngot");
        //genericItem = new GenericItem();
        genericIngot = new GenericItem().setMaxStackSize(16).setUnlocalizedName("genericIngot"); //16, CreativeTabs.tabMisc, 1, "genericIngot");
        GameRegistry.registerItem(genericIngot, "genericIngot");
    }
     
    
    @EventHandler
    public void load(FMLInitializationEvent event)
    {
    }
      
    
    @EventHandler
    public void init(FMLInitializationEvent event) {
    }
    
 
    @EventHandler
    public void postInit(FMLPostInitializationEvent event)
    {
    }
}

